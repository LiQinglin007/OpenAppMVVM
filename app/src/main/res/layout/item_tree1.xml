<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_110"
    android:layout_marginTop="@dimen/px_2"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/item_tree_img"
        android:layout_width="@dimen/px_8"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/px_2"
        android:layout_marginBottom="@dimen/px_2"
        android:background="@color/default_color" />

    <TextView
        android:id="@+id/item_tree_lv0"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/color_333"
        android:textSize="@dimen/px_30"
        tools:text="一级分类标题" />

    <ImageView
        android:id="@+id/item_tree_lv0_img"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_40"
        android:paddingRight="@dimen/px_20"
        android:src="@drawable/arrow_b" />


</LinearLayout>
