<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_120"
    android:layout_marginTop="@dimen/px_2"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px_20"
    android:paddingTop="@dimen/px_10"
    android:paddingRight="@dimen/px_20"
    android:paddingBottom="@dimen/px_5">


    <TextView
        android:id="@+id/item_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_333"
        android:textSize="@dimen/px_30"
        tools:text="这里是标题这里是标题这里是标题这里是标题" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666"
            android:textSize="@dimen/px_20"
            tools:text="作者：小米   时间：221" />

        <TextView
            android:id="@+id/item_article_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:background="@drawable/back_article_type"
            android:paddingLeft="@dimen/px_7"
            android:paddingTop="@dimen/px_4"
            android:paddingRight="@dimen/px_7"
            android:paddingBottom="@dimen/px_4"
            android:textColor="@color/warning_color1"
            android:textSize="@dimen/px_20"
            tools:text="硬件" />
    </LinearLayout>


</LinearLayout>
